{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "#app/*": ["app/*"],
      "#tests/*": ["tests/*"]
    }
  },
  "include": ["app", "tests"],
  "exclude": ["node_modules", "dist"]
}
